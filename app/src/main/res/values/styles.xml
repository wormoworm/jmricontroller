<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:reflection="http://schemas.android.com/apk/res-auto">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="Base" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="AppBaseTheme" parent="Base">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
        <item name="selectableItemBackground">@color/primary</item>


    </style>

    <style name="AppTheme" parent="AppBaseTheme">

        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorControlActivated">?colorAccent</item>
        <item name="colorControlHighlight">@color/accent_light</item>
        <item name="colorControlNormal">@color/accent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="textAppearanceListItem">@style/TextAppearance.ListItem</item>
        <item name="textAppearanceListItemSmall">@style/TextAppearance.ListItemSmall</item>
        <!--
                <item name="textAppearanceExtendedToolbarTitle">@style/TextAppearance.AppCompat.Widget.ActionBar.Title</item>
                <item name="textAppearanceExtendedToolbarSubtitle">@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle</item>
                <item name="textAppearanceListItemRightInfo">@style/TextAppearance.ListItemRightInfo</item>
                <item name="textAppearanceListSubheader">@style/TextAppearance.ListSubheader</item>

                -->
        <item name="android:listViewStyle">@style/ListView</item>

        <item name="android:actionModeStyle">@style/ActionMode</item>
        <item name="actionModeStyle">@style/ActionMode</item>

    </style>

    <style name="CustomToolbarTheme.Base" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:actionModeStyle">@style/ActionMode</item>
    </style>

    <style name="CustomToolbarTheme" parent="CustomToolbarTheme.Base"></style>

    <style name="TextAppearance.ListItem" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.ListItemSmall" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TextAppearance.ListItemRightInfo" parent="TextAppearance.ListItemSmall">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.ListSubheader" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListView" parent="android:Widget.ListView">
        <item name="android:listSelector">@drawable/list_selector_compat</item>
    </style>

    <style name="ActionModeBase">
        <item name="background">?colorPrimary</item>
        <item name="android:backgroundSplit">?android:attr/actionModeSplitBackground</item>
        <item name="android:height">?android:attr/actionBarSize</item>
    </style>

    <style name="ActionMode" parent="ActionModeBase" />

    <style name="EditTextInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="ButtonLarge">
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@android:color/white</item>

    </style>

    <style name="BorderlessButton" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/accent</item>
    </style>
</resources>