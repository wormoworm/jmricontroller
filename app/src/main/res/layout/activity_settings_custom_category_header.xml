<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_settings_custom_category_header_wrapper"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:descendantFocusability="blocksDescendants"  >

    <ImageView
        android:id="@+id/activity_settings_custom_category_header_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/app_icon" />

    <uk.tomhomewood.smart.views.SmartTextView
        android:id="@+id/activity_settings_custom_category_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/activity_settings_custom_category_header_icon"
        android:text="Title"
        android:textSize="@dimen/text_size_large" />

    <uk.tomhomewood.smart.views.SmartSwitch
        android:id="@+id/activity_settings_custom_category_header_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textOff="@string/label_power_off"
        android:textOn="@string/label_power_on"
        android:textSize="@dimen/text_size_medium" 
        android:layout_alignBottom="@+id/activity_settings_custom_category_header_title" />

    <uk.tomhomewood.smart.views.SmartTextView
        android:id="@+id/activity_settings_custom_category_header_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/activity_settings_custom_category_header_title"
        android:layout_below="@+id/activity_settings_custom_category_header_title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:text="On / off"
        android:textSize="@dimen/text_size_medium" />

</RelativeLayout>