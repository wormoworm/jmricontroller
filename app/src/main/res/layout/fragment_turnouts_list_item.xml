<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_turnouts_list_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_list_item">

    <TextView
        android:id="@+id/fragment_turnouts_list_item_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/turnouts_list_item_height"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="2dp"
        android:layout_toLeftOf="@+id/fragment_turnouts_list_item_indicator"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:text="Main / bay"
        android:textAppearance="@style/TextAppearance.ListItemSmall"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>

    <uk.tomhomewood.android.jmricontroller.customviews.TurnoutIndicatorView
        android:id="@+id/fragment_turnouts_list_item_indicator"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp" />

</RelativeLayout>